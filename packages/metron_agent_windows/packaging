. ./loggregator/src/exiter.ps1

$env:GOROOT="C:\var\vcap\packages\golang1.9.1-windows\go"
$env:GOPATH="${PWD}\loggregator"
$env:PATH="${env:GOROOT}\bin;${env:PATH}"

try {
    $BOSH_INSTALL_TARGET = Resolve-Path $env:BOSH_INSTALL_TARGET

    go build -o "${BOSH_INSTALL_TARGET}\metron.exe" "code.cloudfoundry.org/loggregator/agent"
    if($LASTEXITCODE -ne 0)
    {
        Write-Error "Error compiling: metron"
        Exit 1
    }
} catch {
    Write-Error "Error compiling golang:"
    Write-Error $_.Exception.Message
    Exit 1
}

Exit 0
